<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/custom_card_elevetion"
    app:cardCornerRadius="@dimen/custom_card_elevetion_cornerraduis"
    app:cardUseCompatPadding="true"
    tools:context=".MainActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="clip_vertical">

        <ImageView
            android:id="@+id/custom_par_iv"
            android:layout_width="407dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="145dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dar4" />

        <TextView
            android:id="@+id/custom_par_iv_prix"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_margin="16dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_attach"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="#47A82C"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_par_iv" />

        <TextView
            android:id="@+id/custom_par_iv_Nb_chambre"
            android:layout_width="143dp"
            android:layout_height="36dp"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="16dp"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="#47A82C"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_par_iv_prix" />
        <TextView
            android:id="@+id/custom_par_iv_Superficier"
            android:layout_width="359dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/ic_adress"
            android:drawablePadding="16dp"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="#47A82C"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_par_iv_Nb_chambre" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>